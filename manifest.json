{
  "manifest_version": 2,
  "name":"DreamWidgets",
  "version":"1.0",
  "description":"Make Dreamwidth better and more mobile friendly.",

  "web_accessible_resources": [
    "img/dw-logo.png",
    "css/lynx-dark.css",
    "css/tropored-dark.css"
  ],

  "content_scripts": [
  {
    "all_frames": true,
    "run_at": "document_end",
    "css": ["css/main.css"],
    "matches": ["*://*.dreamwidth.org/*"],
    "js": ["js/themes.js", "js/tweaks.js", "js/icon-browser.js", "js/custom.js", "js/opt.js"]
  }
],

  "browser_specific_settings": {
    "gecko": {
      "id": "dreamwidgets@andontie.net",
      "strict_min_version": "57.0"
    }
  },

  "permissions":
  [
  "tabs",
  "storage",
	"http://*.dreamwidth.org/*",
	"https://*.dreamwidth.org/*"
  ]
}
